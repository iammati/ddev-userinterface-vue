{
    "private": true,
    "name": "ddev-ui",
    "version": "0.0.1",
    "author": {
        "email": "mati_01@icloud.com",
        "name": "iammati"
    },
    "scripts": {
        "predev": "echo development > ../public/dist/hot",
        "dev": "NODE_ENV=development vite --host",
        "preprod": "echo production > ../public/dist/hot",
        "prod": "NODE_ENV=production vite build --watch=false",
        "lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
        "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore",
        "lint:prettier": "prettier --check .",
        "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
        "lintfix": "prettier --write --list-different . && yarn lint:js --fix && yarn lint:style --fix",
        "test": "./node_modules/ava/cli.js -v --color",
        "test:watch": "./node_modules/ava/cli.js -v --color -w"
    },
    "lint-staged": {
        "*.{js,ts}": "eslint --cache",
        "*.{css,scss,sass,html}": "stylelint",
        "*.**": "prettier --check --ignore-unknown"
    },
    "devDependencies": {
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@types/node": "^17.0.12",
        "@types/toastr": "^2.1.39",
        "@typescript-eslint/parser": "^5.10.1",
        "autoprefixer": "^10.4.2",
        "ava": "^3.15.0",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "lint-staged": "^12.3.1",
        "path": "^0.12.7",
        "sass": "^1.49.0",
        "stylelint": "^14.3.0",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard": "^24.0.0",
        "tailwind-bootstrap-grid": "^4.0.0",
        "tailwindcss": "^3.0.16",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@originjs/vite-plugin-commonjs": "^1.0.2",
        "node-waves": "^0.7.6",
        "toastr": "^2.1.4",
        "vite": "^2.7.13",
        "vite-plugin-eslint": "^1.3.0",
        "vite-plugin-time-reporter": "^1.0.0"
    }
}